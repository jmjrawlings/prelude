{
    // Name appearing in the bottom left corner
    "name": "prelude",
                    
    "build":{
        "dockerfile": "../Dockerfile",
        "context": "..",
        "target": "dev",
        "args": {
            "USER_NAME": "harken"
        }
    },

    "workspaceFolder": "/${localWorkspaceFolderBasename}",
    "workspaceMount": "source=${localWorkspaceFolder},target=/${localWorkspaceFolderBasename},type=bind,consistency=cached",
        
    "mounts":[
        // Mount the hosts docker engine for dagger
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        // [Optional] Use a volume to install VSCode extensions, see https://code.visualstudio.com/remote/advancedcontainers/avoid-extension-reinstalls
        // "source=vscode-extensions,target=/root/.vscode-server/extensions,type=volume"
    ],

    "customizations": {
        "vscode": {
            "settings": {

                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh",
                        "args": ["-l"]
                    }
                },
                "editor.detectIndentation": false,
                "editor.insertSpaces": true,
                "telemetry.telemetryLevel" : "off"
            },

            "extensions": [
                // Python
                "ms-python.python",
                // Access workspace via web browser (good for .html)
                "ritwickdey.liveserver",
                // Mermaid JS support
                "bierner.markdown-mermaid",
                // Dagger Language Server
                "Dagger.dagger",
                // Docker integration
                "ms-azuretools.vscode-docker",
                // .env file support
                "mikestead.dotenv"

            ]
        }
    },
            
    "runArgs": [ 
        "--init",
        "--hostname", "host",
        "--env-file", ".devcontainer/devcontainer.env"
    ],

    "containerEnv": {
        "DO_NOT_TRACK" : "1"
    }
}